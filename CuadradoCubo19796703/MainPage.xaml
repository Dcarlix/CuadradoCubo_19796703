<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuadradoCubo19796703.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="cuadradoycubo.jpg"
                HeightRequest="185"
                Aspect="AspectFit"/>
            <Label Text="Ingrese un numero"/>
            <Entry Placeholder="El numero" x:Name="numero"/>
            <Button Text="Calcular" Clicked="Button_Clicked"/>
            <Label Text="Al cuadrado" FontSize="20" HorizontalTextAlignment="Center" Margin="5" x:Name="cuadrado"/>
            <Label Text="Al cubo" FontSize="20" HorizontalTextAlignment="Center" Margin="5" x:Name="cubo"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
